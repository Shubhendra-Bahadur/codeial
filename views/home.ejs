<link rel="stylesheet" href="/css/home.css" />
<p>hello home</p>
<br />
<section id="feed-post">
  <h4>Posts</h4>
  <%if(locals.user){%>
  <form action="/posts/create" id="new-post-form" method="POST">
    <textarea
      name="content"
      id="new-post-content"
      cols="30"
      rows="3"
      placeholder="Post here"
    ></textarea>
    <input type="submit" value="post" />
  </form>
  <%}%>
  <!-- <p><%=locals.user%></p> -->
  <div id="post-list-container">
    <ul>
      <%for(post of posts){%>
      <li><%=post.content%></li>
      <li><%=post.user.name%></li>
      <a href="/posts/delete/?id=<%=post._id%>">Delete post</a>
      <%}%>
    </ul>
  </div>
</section>
